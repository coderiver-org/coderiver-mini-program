/* pages/login/index.wxss */

page {
  background: rgba(66, 159, 196, 1);
}

.login-main {
  padding: 90rpx 50rpx;
}

.title {
  font-size: 62rpx;
  font-family: HiraginoSansGB-W3;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  padding-bottom: 110rpx;
  display: block;
}

.login-box .small-title {
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  font-size: 30rpx;
}

.small-list {
  display: flex;
  justify-content: space-between;
}

.login-box-list {
  margin: 0rpx 0 60rpx;
  position: relative;
  border-bottom: 2rpx solid #fff;
  padding: 30rpx 0;
}

.login-box-list image {
  position: absolute;
  right: 0;
  width: 48rpx;
  height: 34rpx;
  top: 50%;
  margin-top: -17rpx;
}

.login-box-list input {
  color: #fff;
}

.login-btn-box {
  display: flex;
  justify-content: space-between;
}

.login-btn-box button {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 1);
  border-radius: 37rpx;
  font-size: 28rpx;
  font-family: HiraginoSansGB-W3;
  color: rgba(255, 255, 255, 1);
  margin-left: 0;
  align-items: center;
}
.login-btn-box image{
  width: 100rpx;
  height: 100rpx;
}
